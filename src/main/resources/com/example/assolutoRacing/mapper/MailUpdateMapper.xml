<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.example.assolutoRacing.Mapper.MailUpdateMapper">
	
  <insert id="insert">
    insert into mail_update
    (
      mail,
      token,
      create_time,
      user_id
    )
    values(
     #{mail},
     #{token},
     now(),
     #{userId}
    )
  </insert>
</mapper>